<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dataCovidFragments.CountryDataFragment">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchCountryBtn"
        android:text="Search country"
        android:textSize="10dp"
        android:layout_alignParentRight="true"
        android:layout_margin="0dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextSpecificCountryData"
        android:hint="get COVID-19 total for a country"
        android:textSize="15dp"
        android:layout_toLeftOf="@id/searchCountryBtn"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/countryDataListView"
        android:layout_below="@+id/editTextSpecificCountryData"/>

</RelativeLayout>